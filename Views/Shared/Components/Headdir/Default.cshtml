@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <h3>Select Head Direction</h3>
    
    <a asp-controller="Home" asp-action="Burials" asp-route-headdir="" asp-route-pageNum="1" class="btn btn-outline-secondary">All</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Burials" asp-route-headdir="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedHeadDirection == c ? "btn-primary": "btn-outline-secondary")">@c</a>
    }
</div>